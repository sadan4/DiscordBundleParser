{
    "compilerOptions": {
        "composite": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "es2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "sourceMap": true,
        "strict": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "esModuleInterop": true,
        "useUnknownInCatchVariables": false,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        // TODO: remove
        "noImplicitAny": false,
        "preserveSymlinks": true,
    },
    "references": [
        {
            "path": "../ast-parser",
        }
    ],
    "exclude": [
        "node_modules",
        "../**/*.test.ts",
    ]
}